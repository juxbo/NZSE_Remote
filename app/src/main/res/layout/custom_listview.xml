<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listview_senderTestLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/listview_textView"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:padding="10dp"
        android:spinnerMode="dialog"
        android:textColor="#000"
        android:textSize="14sp"
        android:gravity="center_vertical|left"
        android:text="test" />

    <ImageButton
        android:id="@+id/listview_button_clear"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/clear"
        android:layout_weight="0.1"
        android:onClick="onDeleteRowButtonClicked" />

    <ImageButton
        android:id="@+id/listview_button_down"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:src="@drawable/arrow_down"
        android:onClick="onArrowDownClicked" />

    <ImageButton
        android:id="@+id/listview_button_up"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:src="@drawable/arrow_up"
        android:onClick="onArrowUpClicked" />
</LinearLayout>